<?xml version="1.0" encoding="utf-8"?>
<component name="streamDetails" extends="Group" initialFocus="watchButton">
    <children>
        <Label
            id="title"
            color="#ffc000"
            font="font:LargeSystemFont"
            translation="[50, 130]"
            width="1150" />

        <Label
            id="subtitle"
            translation="[50, 175]"
            width="1100" />

        <Label
            id="tags"
            color="#AAAAAA"
            wrap="true"
            width="1100"
            numLines="2"
            translation="[50, 215]" />

        <Poster
            id="posterImage"
            height="225"
            translation="[50, 300]"
            width="400"
            loadWidth="225"
            loadHeight="400"
            loadDisplayMode="limitSize" />

        <StandardButton id="watchButton" text="Watch" width="300" height="50" color="#222222"
            focusBackground="#5441d9" translation="[500, 300]" />
        <StandardButton id="favoriteButton" text="Add To Favorites" width="300" height="50"
            color="#222222" focusBackground="#5441d9" translation="[500, 370]" />
        <StandardButton id="disconnectButton" text="Disconnect Server" width="300" height="50"
            color="#222222" focusBackground="#5441d9" translation="[500, 440]" />
    </children>
    <interface>
        <function name="onShow" />
        <field id="channelData" type="node" onchange="onChannelDataChanged" />
        <field id="selectedButton" type="node" />
        <field id="finalFocus" type="node" />
    </interface>
</component>